<Application x:Class="TSFCS.SCOP.App" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             StartupUri="View/LoginView.xaml" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             d1p1:Ignorable="d" 
             xmlns:d1p1="http://schemas.openxmlformats.org/markup-compatibility/2006">
    <Application.Resources>
        <ResourceDictionary>
            <!--  MVVMLight  -->
            <vm:ViewModelLocator x:Key="Locator" d:IsDataSource="True" xmlns:vm="clr-namespace:TSFCS.SCOP.ViewModel"/>

            <ResourceDictionary.MergedDictionaries>
                <!--  reference defined resourcedictionary  -->
                <ResourceDictionary Source="Style/DataGridStyle.xaml"/>
                <ResourceDictionary Source="Style/ExpanderStyle.xaml"/>
                <ResourceDictionary Source="Style/ListBoxStyle.xaml"/>
                <ResourceDictionary Source="Style/MenuItemStyle.xaml"/>
                <ResourceDictionary Source="Style/ScrollViewerStyle.xaml"/>
                <ResourceDictionary Source="Style/TabControlWithUnderLineStyle.xaml"/>
                <ResourceDictionary Source="Style/TopTabControlStyle.xaml"/>
                
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>